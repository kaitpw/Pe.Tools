<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ui:ControlsDictionary />
    </ResourceDictionary.MergedDictionaries>

    <!-- DefaultUiTextBoxStyle can be found in the source code for ui:TextBox -->
    <Style TargetType="{x:Type ui:TextBox}" BasedOn="{StaticResource DefaultUiTextBoxStyle}">
        <Setter Property="ClearButtonEnabled" Value="False" /> <!-- Default is True -->
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="TransparentTextBoxStyle" TargetType="{x:Type ui:TextBox}"
           BasedOn="{StaticResource DefaultUiTextBoxStyle}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Style.Resources>
            <!-- Override hover/focus background colors to remain transparent -->
            <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="Transparent" />
            <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
            <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent" />
            <SolidColorBrush x:Key="TextControlElevationBorderBrush" Color="Transparent" />
            <SolidColorBrush x:Key="TextControlFocusedBorderBrush" Color="Transparent" />
            <!-- Remove accent border on focus -->
            <Thickness x:Key="TextBoxAccentBorderThemeThickness">0</Thickness>
        </Style.Resources>
    </Style>
</ResourceDictionary>